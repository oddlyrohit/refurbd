generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Only requires DATABASE_URL to be set in .env â€” no DIRECT_URL needed.
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects  Project[]
}

model Project {
  id        String   @id @default(uuid())
  userId    String
  name      String
  room      String
  scope     String
  style     String?
  palette   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id])
  jobs      RenderJob[]
}

model RenderJob {
  id        String   @id @default(uuid())
  projectId String
  title     String
  status    String   // queued | processing | done | error
  progress  Int      @default(0)
  beforeUrl String?
  afterUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project   Project  @relation(fields: [projectId], references: [id])
}
